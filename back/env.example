# =============================================================================
# 环境变量配置模板
# 请复制此文件为 .env 并填写实际配置
# 命令: cp env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Application 应用配置
# -----------------------------------------------------------------------------
APP_APP_NAME="Research Achievement Management API"
APP_ENVIRONMENT="development"
APP_API_PREFIX="/api"
# CORS 跨域配置 - 支持多个前端地址
APP_CORS_ORIGINS='["http://localhost:3000", "http://localhost:5173"]'

# -----------------------------------------------------------------------------
# JWT 密钥配置（⭐ 必须设置）
# -----------------------------------------------------------------------------
# 警告：这是最重要的安全配置！请务必生成并设置唯一的密钥
# 生成方法：python -c "import secrets; print(secrets.token_urlsafe(32))"
# 注意：生产环境必须使用强密钥，且不能提交到版本控制
APP_JWT_SECRET_KEY=your-jwt-secret-key-here-please-change-this

# -----------------------------------------------------------------------------
# PostgreSQL 数据库配置
# -----------------------------------------------------------------------------
APP_POSTGRES_ENABLED=true
APP_POSTGRES_DSN="postgresql+asyncpg://postgres:123456@localhost:5432/research"
APP_POSTGRES_ECHO=false

# -----------------------------------------------------------------------------
# Neo4j 图数据库配置（知识图谱）
# -----------------------------------------------------------------------------
APP_NEO4J_ENABLED=true
APP_NEO4J_URI="bolt://localhost:7687"
APP_NEO4J_USER="neo4j"
APP_NEO4J_PASSWORD="12345678"
APP_NEO4J_DATABASE="research"

# -----------------------------------------------------------------------------
# MongoDB 配置（文档存储）
# -----------------------------------------------------------------------------
APP_MONGO_ENABLED=true
APP_MONGO_DSN="mongodb://localhost:27017"
APP_MONGO_DATABASE="research"
# 如果 MongoDB 启用了认证，使用：
# APP_MONGO_DSN="mongodb://username:password@localhost:27017"

# -----------------------------------------------------------------------------
# Redis 配置（缓存和 Token 黑名单）
# -----------------------------------------------------------------------------
APP_REDIS_ENABLED=true
APP_REDIS_DSN="redis://localhost:6379/0"
APP_REDIS_SSL=false
# 如果 Redis 设置了密码，使用：
# APP_REDIS_DSN="redis://:password@localhost:6379/0"

# -----------------------------------------------------------------------------
# AI 大模型配置
# -----------------------------------------------------------------------------
# 智谱 AI API 密钥
# 获取地址: https://open.bigmodel.cn/
APP_ZHIPU_API_KEY=your-zhipu-api-key-here

# OpenAI API 密钥（可选）
APP_OPENAI_API_KEY=your-openai-api-key-here

# -----------------------------------------------------------------------------
# 项目启动配置
# -----------------------------------------------------------------------------
# 项目启动默认时长（小时）
APP_PROJECT_STARTUP_DURATION_HOURS=1

