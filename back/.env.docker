# ==================== 应用基本配置 ====================
APP_APP_NAME=Collect Precious Time API
APP_ENVIRONMENT=production
APP_API_PREFIX=/api

# CORS 允许的来源（前端地址）- 使用 JSON 数组格式
APP_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# ==================== JWT 配置 ====================
# 重要：生产环境请更换为强随机密钥！
# 生成方式: python -c "import secrets; print(secrets.token_urlsafe(32))"
APP_JWT_SECRET_KEY=your-secret-key-here
# ==================== PostgreSQL 配置 ====================
APP_POSTGRES_ENABLED=true
# host 使用 docker-compose 服务名 "postgres"
APP_POSTGRES_DSN=postgresql+asyncpg://appuser:apppassword@postgres:5432/appdb
APP_POSTGRES_ECHO=false

# ==================== Neo4j 配置 ====================
APP_NEO4J_ENABLED=true
# host 使用 docker-compose 服务名 "neo4j"
APP_NEO4J_URI=bolt://neo4j:7687
APP_NEO4J_USER=neo4j
APP_NEO4J_PASSWORD=neopassword
APP_NEO4J_DATABASE=neo4j

# ==================== MongoDB 配置 ====================
APP_MONGO_ENABLED=true
# host 使用 docker-compose 服务名 "mongo"
APP_MONGO_DSN=mongodb://mongouser:mongopassword@mongo:27017
APP_MONGO_DATABASE=academic_db

# ==================== Redis 配置 ====================
APP_REDIS_ENABLED=true
# host 使用 docker-compose 服务名 "redis"
APP_REDIS_DSN=redis://redis:6379/0
APP_REDIS_SSL=false

# ==================== AI 模型配置（可选） ====================
# 智谱 AI
APP_ZHIPU_API_KEY=

# OpenAI
APP_OPENAI_API_KEY=

# ==================== 其他配置 ====================
APP_PROJECT_STARTUP_DURATION_HOURS=1
